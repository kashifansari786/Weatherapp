                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY"/>
                        <TextView
